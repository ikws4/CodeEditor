<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <io.ikws4.codeeditor.component.Gutter
            android:id="@+id/gutter"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fadingEdge="none"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:scrollbars="none">

                <io.ikws4.codeeditor.component.TextArea
                    android:id="@+id/textArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dropDownWidth="196dp"
                    android:dropDownHeight="120dp"
                    android:importantForAutofill="no"
                    android:paddingLeft="0dp"
                    android:paddingTop="0dp"
                    android:paddingRight="120dp"
                    android:paddingBottom="128dp"
                    android:popupElevation="1dp"
                    android:scrollbars="none"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSelectHandle="@drawable/empty_text_select_handle" />

            </ScrollView>

        </HorizontalScrollView>

    </LinearLayout>

    <io.ikws4.codeeditor.component.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp" />

</LinearLayout>
